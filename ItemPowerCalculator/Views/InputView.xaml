<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ItemPowerCalculator.ViewModels"
             x:Class="ItemPowerCalculator.Views.InputView"
             x:DataType="vm:InputViewModel">
    <ContentView.Content>
        <ContentView Grid.Row="1" x:Name="mainView">
            <ContentView.Content>
                <Entry Placeholder = "Wprowadź wartość"
                       Keyboard = "Numeric"
                       IsSpellCheckEnabled = "False"
                       ReturnCommand="{Binding EnteredValue}"
                       ReturnCommandParameter="{Binding Source={RelativeSource Self}, Path=Text}"/>
            </ContentView.Content>
        </ContentView>
    </ContentView.Content>
</ContentView>
